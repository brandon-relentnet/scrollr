# Centralized Backend Configuration
# Copy this file to .env and fill in your values

# Database Configuration (shared by all services)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=scrollr_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# Service Ports
ACCOUNTS_PORT=5000
FINANCE_PORT=4001
SPORTS_PORT=4000

# Environment
NODE_ENV=development

# Accounts Service Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Finance Service Configuration
FINNHUB_API_KEY=your_finnhub_api_key

# Optional Finance Service Configuration
# WS_HEARTBEAT_INTERVAL=30000
# WS_RECONNECT_INTERVAL=5000
# API_RATE_LIMIT_WINDOW=60000
# API_RATE_LIMIT_MAX=60
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=300

# Optional Sports Service Configuration
# ESPN_API_KEY=your_espn_api_key
# ESPN_API_SECRET=your_espn_api_secret
# WS_HEARTBEAT_INTERVAL=30000
# WS_MAX_CONNECTIONS=1000
# POLL_INTERVAL_MINUTES=1
# DAILY_SCHEDULE_HOUR=3
# DAILY_SCHEDULE_TIMEZONE=America/New_York
# ENABLE_CACHE=true
# CACHE_DURATION_MINUTES=5
# LOG_LEVEL=info
# LOG_FILE_PATH=./logs/sports.log